}
</script>
</head>
{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  User has been removed.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6">
    <h1>Person</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-outline-light align-self-center">+ add person</a>
  </div>
</div>

<table class="table table-bordered table-dark">
  <thead class="thead-dark">
    <tr>
      <th class="bg-primary" scope="col">#</th>
      <th scope="col">First Name</th>
      <th class="bg-danger" scope="col">Last Name</th>
      <th class="bg-warning" scope="col">Date Of Birth</th>
      <th class="bg-success" scope="col">Weight</th>
      <th class="bg-primary" scope="col">Height</th>
      <th scope="col">Gender</th>
      <th class="bg-danger" scope="col">Age</th>
      <th class="bg-warning" scope="col">Phone</th>
      <th class="bg-success" scope="col">Role</th>
      <th class="bg-primary" scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td id="dateFormat"><script type="text/javascript">
        var date1 = "{{this.dob}}";
        var date2 = new Date(date1);
        date2.setHours(0, 0, 0, 0);
        console.log(date2);
        d1 = WithoutTime(date2);  
        document.write(d1);
      </script></td>
      <td>{{this.weight}}</td>
      <td>{{this.height}}</td>
      <td>{{this.gender}}</td>
      <td>{{this.age}}</td>
      <td>{{this.phone}}</td>
      <td>{{this.role}}</td>
      <td class="text-end">
        <a href="/viewuser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
        <a href="/edituser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
          Edit</a>
        <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>